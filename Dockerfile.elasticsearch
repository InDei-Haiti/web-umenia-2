FROM elasticsearch:2.4.1

RUN echo "version:"
RUN echo $VERSION

# purpose of a custom dockerfile for elasticsearch is that we can consistently install plugins we need during build
# instead of doing it manually

RUN ./bin/plugin install https://github.com/vhyza/elasticsearch-analysis-lemmagen/releases/download/v2.4.1/elasticsearch-analysis-lemmagen-2.4.1-plugin.zip
RUN mkdir config/lemmagen
RUN wget -P config/lemmagen/ https://github.com/vhyza/lemmagen-lexicons/raw/master/free/lexicons/sk.lem
RUN wget -P config/lemmagen/ https://github.com/vhyza/lemmagen-lexicons/raw/master/free/lexicons/cs.lem
RUN wget -P config/lemmagen/ https://github.com/vhyza/lemmagen-lexicons/raw/master/free/lexicons/en.lem

# grab sng elasticsearch repository - will make proper directory structure inside config
# TODO: add all these files to a repo that gets downloaded in one go to simplify
# or even better: add the files	 to this repo and link it to the elasticsearch container as a volume

RUN wget -O- https://github.com/SlovakNationalGallery/elasticsearch-slovencina/archive/master.tar.gz | tar xz -C config --strip=1	


# grab extra synonym files and save them inside config/synonyms
RUN wget -O config/synonyms/synonyms_cz.txt -L https://sites.google.com/site/kevinbouge/synonyms-lists/synonyms_cz.txt
RUN wget -O- http://wordnetcode.princeton.edu/3.0/WNprolog-3.0.tar.gz | tar xz -C config/synonyms --strip=1 prolog/wn_s.pl

# grab extra stop-words files
RUN wget -O config/stop-words/stop-words-czech2.txt https://sites.google.com/site/kevinbouge/stopwords-lists/stopwords_cz.txt


#chyno's image plugin
# COPY ../elasticsearch-image-2.4.1 plugins/elasticsearch-image-2.4.1